package com.calcus.scheduler;

import org.springframework.context.annotation.AnnotationConfigApplicationContext;

import com.calcus.scheduler.dao.RoadTaxDAO;
import com.calcus.scheduler.model.RoadTax;



public class RoadTaxTest { 
	
public static void main(String[] args) {

		
		@SuppressWarnings("resource")
		AnnotationConfigApplicationContext context = new AnnotationConfigApplicationContext();
		context.scan("com.calcus");
		context.refresh();
		RoadTaxDAO roadTaxDAO = (RoadTaxDAO) context.getBean("roadTaxDAO");
		RoadTax roadTax = (RoadTax) context.getBean("roadTax");
		// Create Operation
		roadTax.setTo_Date("02012017");
		roadTax.setExpiry_Date("01012018");
		roadTaxDAO.saveOrUpdate(roadTax);
	    
	    System.out.println("RoadTax Updated");

	}

}
