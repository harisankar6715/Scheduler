package com.calcus.scheduler;

import org.springframework.context.annotation.AnnotationConfigApplicationContext;

import com.calcus.scheduler.dao.InsuranceDAO;

import com.calcus.scheduler.model.Insurance;


public class InsuranceTest {

	public static void main(String[] args) {

		
		@SuppressWarnings("resource")
		AnnotationConfigApplicationContext context = new AnnotationConfigApplicationContext();
		context.scan("com.calcus");
		context.refresh();
		InsuranceDAO insuranceDAO = (InsuranceDAO) context.getBean("insuranceDAO");
		Insurance insurance = (Insurance) context.getBean("insurance");
		// Create Operation
		insurance.setTo_Date("02012017");
		insurance.setExpiry_Date("01012018");
		insuranceDAO.saveOrUpdate(insurance);
	    
	    System.out.println("Vehicle Updated");

	}
}
